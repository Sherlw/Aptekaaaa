<Window x:Class="Aptekaaaa.SuppliersFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aptekaaaa"
        mc:Ignorable="d" Background="{StaticResource BackgroundBrush}"
        Title="SuppliersFormWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock FontSize="20" Text="Название:"/>
            <TextBox FontSize="20" x:Name="txtName"/>

            <TextBlock FontSize="20" Text="Контактная информация:"/>
            <TextBox FontSize="20" x:Name="txtContact"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Width="150" Margin="10,0,0,0" Click="BtnSave_Click"/>
            <Button Content="Отмена" Width="120" Margin="20,0,0,0" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
