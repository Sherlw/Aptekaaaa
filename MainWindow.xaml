<Window x:Class="Aptekaaaa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aptekaaaa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добро пожаловать!"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#A78BFA" Margin="10,10,10,10"
                   HorizontalAlignment="Center"/>

        <TextBlock Text="Логин"
                   Grid.Row="2"
                   FontWeight="SemiBold" Margin="10,10,10,10"
                   Foreground="#333"/>
        <TextBox x:Name="txtLogin"
                 Grid.Row="3"
                 Height="35"
                 Background="#FFF"
                 BorderBrush="#E0D4FD"
                 BorderThickness="1"
                 Padding="10"
                 Margin="10,10,10,10"
                 />

        <TextBlock Text="Пароль"
                   Grid.Row="4"
                   Margin="10,10,10,10"
                   FontWeight="SemiBold"
                   Foreground="#333"/>
        <PasswordBox x:Name="txtPassword"
                     Grid.Row="5"
                     Height="35"
                     Background="#FFF"
                     BorderBrush="#E0D4FD"
                     BorderThickness="1" Margin="10,10,10,10"
                     Padding="10"
                     />

        <Button Content="Войти"
                Grid.Row="6"
                Height="40"
                x:Name="btnLogin"
                Background="#A78BFA"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0" Margin="10,10,10,10"
                Cursor="Hand"
                Click="BtnLogin_Click"
                />

        <TextBlock x:Name="lblStatus"
                   Grid.Row="7"
                   Text=""
                   Foreground="Red"
                   FontSize="12"
                   TextAlignment="Center"
                   Margin="10,10,10,10"/>
    </Grid>
</Window>
